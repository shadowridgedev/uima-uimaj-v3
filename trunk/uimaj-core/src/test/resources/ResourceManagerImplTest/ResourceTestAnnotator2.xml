		<externalResourceDependency>
			<key>TestResourceObject</key>
			<description />
			<interfaceName>org.apache.uima.resource.impl.TestResourceInterface</interfaceName>
		</externalResourceDependency>
		<externalResourceDependency>
			<key>TestLanguageResourceObject</key>
			<description />
			<interfaceName>org.apache.uima.resource.impl.TestResourceInterface</interfaceName>
