<!-- Descriptor for CAS consumer that prints annotations over sofas to System.out -->

<casConsumerDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <implementationName>org.apache.uima.examples.cpm.sofa.SofaCasConsumer</implementationName>
    <processingResourceMetaData>
        <name>Test Sofa Cas Consumer</name>
        <description>Sofa-aware CAS Consumer used in Sofa unit tests.</description>
        <version>1.0</version>
        <vendor>The Apache Software Foundation</vendor>	   
        <capabilities>
          <capability>
            <inputSofas>
				<sofaName>SourceDocument</sofaName>
				<sofaName>TranslatedDocument</sofaName>
			</inputSofas>	
          </capability> 
        </capabilities>
    </processingResourceMetaData>
</casConsumerDescription>
