<!-- Descriptor for testing invalid configuration group parameter settings. -->

<taeDescription xmlns="http://uima.apache.org/resourceSpecifier">
<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
<primitive>true</primitive>
<annotatorImplementationName>org.apache.uima.analysis_engine.impl.TestAnnotator</annotatorImplementationName>
 
<analysisEngineMetaData>
<name>Annotator With Configuration Groups</name>
<description>For testing configuration groups.</description>
<version>1.0</version>
<vendor>The Apache Software Foundation</vendor>
 
<!-- Configuration Parameter Definitions -->
<configurationParameters defaultGroup="en" searchStrategy="language_fallback"> 

	<configurationParameter>
	  <name>GrouplessParam1</name>
  	  <description/>
	  <type>String</type>	
	</configurationParameter>
	<configurationParameter>
	  <name>GrouplessParam2</name>
  	  <description/>
	  <type>Integer</type>	
	</configurationParameter>

<commonParameters>
  <configurationParameter>
    <name>StringArrayParam</name>
    <description/>
    <type>String</type>
    <multiValued>true</multiValued>
  </configurationParameter>  
</commonParameters>


<configurationGroup names="en en-US">
  <configurationParameter>
    <name>IntegerParam</name>
    <description/>
    <type>Integer</type>
  </configurationParameter>
  <configurationParameter>
    <name>IntegerArrayParam</name>
    <description/>
    <type>Integer</type>
    <multiValued>true</multiValued>
  </configurationParameter>
</configurationGroup>

</configurationParameters>


<!-- Values for the configuration parameters -->
<configurationParameterSettings>

<nameValuePair>
	<name>GrouplessParam1</name>
	<value><string>foo</string></value>
</nameValuePair>

<nameValuePair>
	<name>GrouplessParam2</name>
	<value><integer>42</integer></value>
</nameValuePair>

<settingsForGroup name="en">
  <nameValuePair>
    <name>StringParam</name>
    <value><string>en</string></value>
  </nameValuePair>
  <nameValuePair>
    <name>StringArrayParam</name>
    <value><array>
      <string>e</string>
      <string>n</string>
    </array></value>
  </nameValuePair>
  <nameValuePair>
    <name>IntegerParam</name>
    <value><integer>42</integer></value>
  </nameValuePair>
  <nameValuePair>
    <name>IntegerArrayParam</name>
    <value><array>
      <integer>1</integer>
      <integer>2</integer>
      <integer>3</integer>
    </array></value>
  </nameValuePair>
</settingsForGroup>

<settingsForGroup name="en-US">
  <nameValuePair>
    <name>StringArrayParam</name>
    <value><array>
      <string>e</string>
      <string>n</string>
      <string>-</string>
      <string>U</string>
      <string>S</string>
    </array></value>
  </nameValuePair>
  <nameValuePair>
    <name>IntegerParam</name>
    <value><integer>1776</integer></value>
  </nameValuePair>
  <nameValuePair>
    <name>IntegerArrayParam</name>
    <!-- Value should be an array ... will fail unless UIMA_Jira3123 is set -->
    <value><integer>1776</integer></value>
  </nameValuePair>
</settingsForGroup>

</configurationParameterSettings>

  



<typeSystemDescription>
<types/>
</typeSystemDescription>

<!-- Capabilities: Inputs and Outputs -->
<capabilities>
<capability>
<inputs/>
<outputs/>
<languagesSupported/>
</capability>
</capabilities>

</analysisEngineMetaData>
</taeDescription>
